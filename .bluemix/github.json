{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Logistics Wizard GitHub Setup",
  "description": "Logistics Wizard GitHub Schema",
  "longDescription": "The GitHub Service allows you to create or use an existing GitHub repository to store your source code.",
  "type": "object",
  "properties": {
    "erp-api-repo_name": {
      "type": "string"
    },
    "erp-api-repo_url": {
      "type": "string"
    },
    "erp-api-coveralls_token": {
      "type": "string"
    },
    "controller-repo_name": {
      "type": "string"
    },
    "controller-repo_url": {
      "type": "string"
    },
    "controller-coveralls_token": {
      "type": "string"
    },
    "webui-repo_name": {
      "type": "string"
    },
    "webui-repo_url": {
      "type": "string"
    },
    "webui-coveralls_token": {
      "type": "string"
    }
  },
  "required": ["erp-api-repo_name", "erp-api-repo_url", "controller-repo_name", "controller-repo_url", "webui-repo_name", "webui-repo_url"],
  "form": [
    {
      "type": "validator",
      "url": "/devops/setup/bm-helper/custom_github_helper.html"
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["47%", "6%", "47%"],
      "items": [
        {
          "type": "label",
          "title": "Source Repository"
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": "Target Repository"
        },
        {
          "type": "text",
          "key": "erp-api-repo_url"
        },
        {
          "type": "icon",
          "iconType": "right_arrow"
        },
        {
          "type": "text",
          "key": "erp-api-repo_name"
        },
        {
          "type": "text",
          "key": "controller-repo_url"
        },
        {
          "type": "icon",
          "iconType": "right_arrow"
        },
        {
          "type": "text",
          "key": "controller-repo_name"
        },
        {
          "type": "text",
          "key": "webui-repo_url"
        },
        {
          "type": "icon",
          "iconType": "right_arrow"
        },
        {
          "type": "text",
          "key": "webui-repo_name"
        }
      ]
    },
    {
      "type": "text",
      "readonly": false,
      "title": "ERP Coveralls Token",
      "key": "erp-api-coveralls_token"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Controller Coveralls Token",
      "key": "controller-coveralls_token"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Webui Coveralls Token",
      "key": "webui-coveralls_token"
    }
  ]
}
