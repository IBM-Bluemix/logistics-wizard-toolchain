{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Logistics Wizard Email Setup",
  "description": "Sending emails on behalf of the Logistics Wizard demo",
  "longDescription": "Gmail account settings allowing your app to send emails to demo users.",
  "type": "object",
  "properties": {
    "dev-email": {
      "description": "Dev app email address",
      "type": "string"
    },
    "dev-password": {
      "description": "Dev app email account password",
      "type": "string"
    },
    "test-email": {
      "description": "Testing email address",
      "type": "string"
    },
    "test-password": {
      "description": "Testing email account password",
      "type": "string"
    },
   "prod-email": {
      "description": "Production email address",
      "type": "string"
    },
    "prod-password": {
      "description": "Production email account password",
      "type": "string"
    }
  },
  "form": [
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["20%", "40%", "40%"],
      "items": [
        {
          "type": "label",
          "title": "Dev Account"
        },
        {
          "type": "text",
          "readonly": false,
          "key": "dev-email"
        },
        {
          "type": "text",
          "readonly": false,
          "key": "dev-password"
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["20%", "40%", "40%"],
      "items": [
        {
          "type": "label",
          "title": "Test Account"
        },
        {
          "type": "text",
          "readonly": false,
          "key": "test-email"
        },
        {
          "type": "text",
          "readonly": false,
          "key": "test-password"
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["20%", "40%", "40%"],
      "items": [
        {
          "type": "label",
          "title": "Prod Account"
        },
        {
          "type": "text",
          "readonly": false,
          "key": "prod-email"
        },
        {
          "type": "text",
          "readonly": false,
          "key": "prod-password"
        }
      ]
    }
  ]
}
