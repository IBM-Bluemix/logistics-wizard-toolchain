{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Logistics Wizard Delivery Pipeline Setup",
  "description": "Deployment of the Logistics Wizard demo",
  "longDescription": "The Delivery Pipeline for Devops Services allows you to automate your continuous deployment setup.",
  "type": "object",
  "properties": {
    "region": {
      "description": "The Bluemix region",
      "type": "string"
    },
    "organization": {
      "description": "The Bluemix org",
      "type": "string"
    },
   "space": {
      "description": "The Bluemix space",
      "type": "string"
    },
    "erp-app-name": {
      "description": "Name of the ERP API",
      "type": "string"
    },
   "controller-app-name": {
      "description": "Name of the controller app",
      "type": "string"
    },
    "webui-app-name": {
      "description": "Name of the WEBUI App",
      "type": "string"
    }
  },
  "required": ["region", "organization", "space", "erp-app-name", "controller-app-name", "webui-app-name"],
  "form": [
   {
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
   },
   {
      "type": "text",
      "readonly": false,
      "title": "ERP App Name",
      "key": "erp-app-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Controller App Name",
      "key": "controller-app-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Webui App Name",
      "key": "webui-app-name"
    },

    {
      "type": "table",
      "columnCount": 3,
      "widths": ["33%", "33%", "33%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "region"
        },
        {
          "type": "select",
          "key": "organization"
        },
        {
          "type": "select",
          "key": "space",
          "readonly": false
        }
      ]
    }
  ]
}
