{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Logistics Wizard Deploy Stage",
    "description": "Deployment of the Logistics Wizard demo",
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "erp-app-name": {
            "description": "ERP app name",
            "type": "string"
        },
       "controller-app-name": {
            "description": "controller app name",
            "type": "string"
        },
    },
    "required": ["prod-region", "prod-organization", "prod-space", "erp-app-name", "controller-app-name"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },        
       {
          "type": "text",
          "readonly": false,
          "title": "ERP App Name",
          "key": "erp-app-name"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "Controller App Name",
          "key": "controller-app-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },
                {
                  "type": "label",
                  "title": "Region"
                },
                {
                  "type": "label",
                  "title": "Organization"
                },
                {
                  "type": "label",
                  "title": "Space"
                },
                {
                  "type": "label",
                  "title": "Dev Stage"
                },
                {
                  "type": "label",
                  "title": "Test Stage"
                },
                {
                  "type": "label",
                  "title": "Prod Stage"
                },
                {
                  "type": "select",
                  "key": "prod-region"
                },
                {
                  "type": "select",
                  "key": "prod-organization"
                },
                {
                  "type": "select",
                  "key": "prod-space",
                  "readonly": false
                }
            ]
        }
    ]
}
